@{

    ViewData["Title"] = "Contact Us";

}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="contact-container">
    <h2>Contact Us</h2>
    <p>We’re here to help you with any questions or support you need.</p>

    <!-- Contact Cards -->
    <div class="contact-cards">
        <div class="contact-card">
            <i class="fas fa-envelope"></i>
            <h3>Email Us</h3>
            <p><a href="mailto:support@alwayzzzfresh.com">support@alwayzzzfresh.com</a></p>
        </div>

        <div class="contact-card">
            <i class="fas fa-phone"></i>
            <h3>Call Us</h3>
            <p><a href="tel:18601231000">1860-123-1000</a></p>
        </div>

        <div class="contact-card">
            <i class="fas fa-map-marker-alt"></i>
            <h3>Office Address</h3>
            <p>

                AlwayzzzFresh HQ<br>

                Old Madras Road, Chennai, India<br>

                PIN: 600130
            </p>
        </div>
    </div>

    <!-- Contact Form -->
    <div class="contact-form">
        <h3>Send us a message</h3>
        <form>
            <input type="text" placeholder="Your Name" required />
            <input type="email" placeholder="Your Email" required />
<textarea placeholder="Your Message" rows="4" required></textarea>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>

