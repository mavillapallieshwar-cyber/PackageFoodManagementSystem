@model PackagedFoodFrontend.Models.Wallet

@{

    ViewData["Title"] = "My Wallet";

}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="account-layout">
    <div class="sidebar">

        @Html.Partial("_AccountSidebar")
    </div>

    <div class="main-section">
        <h2>My Wallet</h2>
        <p><strong>Balance:</strong> ₹@Model.Balance</p>
        <p>Welcome to Wallet! One-click payments for faster checkout | 100% success rate | Easy tracking</p>

        <h4 style="margin-top:20px;">Recharge Wallet</h4>
        <form method="post" asp-action="AddMoney" asp-controller="User">
            <div style="margin-top:10px;">
                <button type="submit" name="amount" value="100">₹100</button>
                <button type="submit" name="amount" value="500">₹500</button>
                <button type="submit" name="amount" value="1000">₹1000</button>
                <button type="submit" name="amount" value="2000">₹2000</button>
            </div>
        </form>
    </div>
</div>


