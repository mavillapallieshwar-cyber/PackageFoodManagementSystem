@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<section class="page-hero"
         style="background-image: url('@Url.Content("~/Images/background.jpg")');"
         aria-label="Hero background">
    <div class="form-container form-container--elevated">
        <h2>Login</h2>
        <form id="signinForm" novalidate>
            <input type="text" id="signinUser" placeholder="Mobile or Email" required />
            <span class="error" id="signinUserError"></span>

            <div class="password-wrapper">
                <input type="password" id="signinPassword" placeholder="Password" required />
                <span class="toggle-password" data-target="signinPassword" aria-label="Show/Hide password">
                    <i class="fa fa-eye"></i>
                </span>
            </div>
            <span class="error" id="signinPasswordError"></span>

            <button type="submit" class="btn">Sign In</button>
        </form>
    </div>
</section>
