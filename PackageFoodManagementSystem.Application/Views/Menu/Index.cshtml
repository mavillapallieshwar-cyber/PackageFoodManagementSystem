@{

    ViewData["Title"] = "Menu";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Menu</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <link href="~/css/menu.css" rel="stylesheet" />
</head>

<body>

    <div class="container my-5">
        <h2 class="mb-4 fw-bold">🛒 Explore Products</h2>

        <div class="row g-4">

            <div class="col-md-4">
                <div class="product-card" data-id="1"
                     data-name="Potato Chips"
                     data-price="50"
                     data-quantity="1 pack">

                    <img src="~/images/chips.png" alt="Juice">
                    <h6>Potato Chips</h6>
                    <p class="price">₹50</p>

                    <div class="cart-actions">
                        <button onclick="decrease(this)">−</button>
                        <span class="qty">0</span>
                        <button onclick="increase(this)">+</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card" data-id="2" data-name="Fruit Juice" data-price="80" data-image="/images/juice.png">
                    <img src="~/images/juice.png" alt="Juice">
                    <h6>Fruit Juice</h6>
                    <p class="price">₹80</p>
                    <div class="cart-actions">
                        <button onclick="changeQty(this, -1)">−</button>
                        <span class="qty" id="qty-2">0</span>
                        <button onclick="changeQty(this, 1)">+</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card" data-id="3" data-name="Instant Noodles" data-price="60" data-image="/images/noodles.png">
                    <img src="~/images/noodles.png" alt="Noodles">
                    <h6>Instant Noodles</h6>
                    <p class="price">₹60</p>
                    <div class="cart-actions">
                        <button onclick="changeQty(this, -1)">−</button>
                        <span class="qty" id="qty-3">0</span>
                        <button onclick="changeQty(this, 1)">+</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card" data-id="4" data-name="Traditional Sweets" data-price="120" data-image="/images/sweets.png">
                    <img src="~/images/sweets.png" alt="Sweets">
                    <h6>Traditional Sweets</h6>
                    <p class="price">₹120</p>
                    <div class="cart-actions">
                        <button onclick="changeQty(this, -1)">−</button>
                        <span class="qty" id="qty-4">0</span>
                        <button onclick="changeQty(this, 1)">+</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card" data-id="5" data-name="Milk" data-price="80" data-image="/images/milk.png">
                    <img src="~/images/milk.png" alt="Milk">
                    <h6>Milk</h6>
                    <p class="price">₹80</p>
                    <div class="cart-actions">
                        <button onclick="changeQty(this, -1)">−</button>
                        <span class="qty" id="qty-5">0</span>
                        <button onclick="changeQty(this, 1)">+</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card" data-id="6" data-name="Meat" data-price="80" data-image="/images/meat.png">
                    <img src="~/images/meat.png" alt="Meat">
                    <h6>Meat</h6>
                    <p class="price">₹80</p>
                    <div class="cart-actions">
                        <button onclick="changeQty(this, -1)">−</button>
                        <span class="qty" id="qty-6">0</span>
                        <button onclick="changeQty(this, 1)">+</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card" data-id="7" data-name="Corn" data-price="80" data-image="/images/corn.png">
                    <img src="~/images/corn.png" alt="Corn">
                    <h6>Corn</h6>
                    <p class="price">₹80</p>
                    <div class="cart-actions">
                        <button onclick="changeQty(this, -1)">−</button>
                        <span class="qty" id="qty-7">0</span>
                        <button onclick="changeQty(this, 1)">+</button>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="product-card" data-id="8" data-name="Chocolates" data-price="80" data-image="/images/Chocolates.png">
                    <img src="~/images/Chocolates.png" alt="Chocolates">
                    <h6>Chocolates</h6>
                    <p class="price">₹80</p>
                    <div class="cart-actions">
                        <button onclick="changeQty(this, -1)">−</button>
                        <span class="qty" id="qty-8">0</span>
                        <button onclick="changeQty(this, 1)">+</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>

        // Initialize cart from localStorage

        let cart = JSON.parse(localStorage.getItem("myCart")) || [];

        // On page load, sync quantities shown on screen with what's in the cart

        document.addEventListener("DOMContentLoaded", () => {

            cart.forEach(item => {

                const qtySpan = document.getElementById(`qty-${item.id}`);

                if (qtySpan) qtySpan.innerText = item.qty;

            });

        });

        function changeQty(button, change) {

            const card = button.closest('.product-card');

            const id = card.getAttribute('data-id');

            const name = card.getAttribute('data-name');

            const price = parseInt(card.getAttribute('data-price'));

            const image = card.getAttribute('data-image');

            const qtySpan = card.querySelector('.qty');

            let currentQty = parseInt(qtySpan.innerText);

            currentQty += change;

            if (currentQty < 0) currentQty = 0;

            qtySpan.innerText = currentQty;

            updateCart(id, name, price, image, currentQty);

        }

        function updateCart(id, name, price, image, qty) {

            const index = cart.findIndex(item => item.id === id);

            if (qty > 0) {

                if (index > -1) {

                    cart[index].qty = qty;

                } else {

                    cart.push({ id, name, price, image, qty });

                }

            } else {

                if (index > -1) cart.splice(index, 1);

            }

            // Save the updated cart to localStorage

            localStorage.setItem("myCart", JSON.stringify(cart));

        }
    </script>

</body>
</html>

